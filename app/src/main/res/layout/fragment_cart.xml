<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".CartFragment">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvcart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Món đã chọn"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView: Danh sách món ăn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCartItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvcart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- FrameLayout: Chứa fragment nhỏ nếu cần -->
<!--    <FrameLayout-->
<!--        android:id="@+id/ordered_fragment_container"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="80dp"-->
<!--        android:background="@color/white"-->
<!--        app:layout_constraintTop_toBottomOf="@id/rvCartItems"-->
<!--        app:layout_constraintBottom_toTopOf="@id/total_section"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        android:layout_marginBottom="8dp" />-->

    <!-- Tổng tiền và nút -->
    <LinearLayout
        android:id="@+id/total_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tổng tiền -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng:"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/tvcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="666.666 đ"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/red" />
        </LinearLayout>

        <!-- Nút Thêm món & Thanh toán -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thêm món"
                android:textSize="20dp"
                android:backgroundTint="@color/blue"
                android:layout_marginRight="6dp" />

            <Button
                android:id="@+id/btnPay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:textSize="20dp"
                android:backgroundTint="@color/purple"
                android:layout_marginLeft="6dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
